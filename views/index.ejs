<!DOCTYPE html>
<html lang="en">
  <head>
    <title>C.R.U.D.</title>
    <meta charset="UTF-8">

    <script src="/js/main.js"></script>
    <link rel="stylesheet" href="/css/style.css" media="all"> 

  </head>

  <body ng-app="user-auth" ng-controller="mainController">
    <div class="container">

      <div class="btn-group navigation">

      <div class="btn-group navigation">
        <button class="btn" ui-sref='search'>Search</button>
      </div>

        <label class="btn btn-primary" ui-sref="thing" ng-model="thing" uib-btn-radio="'thing'" ng-show='currentUser'>Favorites</label>
      </div>

      <div class="btn-group navigation">
        <button ng-hide='currentUser' class="btn" ui-sref='login'>Login</button>
      </div>

      <div class="btn-group navigation">
        <button ng-hide='currentUser' class="btn" ui-sref='register'>Register</button>    
      </div>

      <div class="btn-group navigation">
        <button ng-show='currentUser' class="btn" ng-click='logout()'>Logout</button>
      </div>

      <span ng-show='currentUser'>Hello, {{currentUser.username}}!</span>


      <ui-view></ui-view>


    </div>
  </body>
</html>

